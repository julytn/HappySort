<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.zoe.happysort.MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/gradientback">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="123dp">

        <TextView
            android:id="@+id/title"
            android:text="HappySort"
            android:textSize="50sp"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.38"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:capitalize="characters"
            android:textColor="@color/material_deep_teal_500"
            android:allowUndo="false"
            android:textStyle="bold"
            android:layout_row="6"
            android:layout_column="10"
            android:layout_gravity="center" />
    </GridLayout>

    <EditText android:id="@+id/edit_message"
        android:layout_width="308dp"
        android:layout_height="75dp"
        android:hint="@string/edit_message"
        android:gravity="center"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark"
        android:textStyle="bold|italic"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:onClick="sendMessage"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:typeface="normal" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_gravity="right">

        <TextView
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="or"
            android:id="@+id/textView"
            android:layout_row="2"
            android:layout_column="9"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/accent_material_light"
            android:textStyle="bold|italic" />
    </GridLayout>

    <Button
        android:text="@string/upload_a_photo"
        android:id="@+id/btnCapture"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:onClick="sendPhoto"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:typeface="normal"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
